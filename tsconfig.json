{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "babylonjs": ["node_modules/babylonjs"],
      "babylonjs/*": ["node_modules/babylonjs/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.glsl"]
}